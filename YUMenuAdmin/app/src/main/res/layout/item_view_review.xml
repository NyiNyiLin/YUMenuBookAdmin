<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_medium_2"
    android:paddingLeft="@dimen/margin_medium_2"
    android:paddingRight="@dimen/margin_medium_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_review_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_access_time_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_medium_2"/>

        <TextView
            android:id="@+id/tv_item_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nyi"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/color_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_item_review_image"/>

        <TextView
            android:id="@+id/tv_item_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/12/16"
            android:textSize="10sp"
            android:textColor="#aaf98915"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_review_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review text"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_regular"
        android:padding="@dimen/margin_medium_3"
        android:lineSpacingMultiplier="1.2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_white"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/margin_small"/>

</LinearLayout>